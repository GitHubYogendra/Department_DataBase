<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Create_Account"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            app:srcCompat="@drawable/image1" />

        <EditText
            android:id="@+id/UserName1"
            android:layout_width="340dp"
            android:layout_height="66dp"
            android:layout_below="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="-14dp"
            android:layout_marginEnd="46dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:hint="   UserName"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/password1"
            android:drawableStart="@drawable/ic_baseline_password_24"
            android:layout_width="348dp"
            android:layout_height="63dp"
            android:layout_below="@id/UserName1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="38dp"
            android:hint="    Password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/ConfirmPassword1"
            android:drawableStart="@drawable/ic_baseline_password_24"
            android:layout_width="346dp"
            android:layout_height="60dp"
            android:layout_below="@id/password1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="40dp"
            android:hint="   Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="16dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/query"
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConfirmPassword1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="3dp"
            android:paddingLeft="16dp"
            android:text="   Yours Favorite Book Name.."
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/Ans1"
            android:drawableStart="@drawable/ic_baseline_menu_book_24"
            android:layout_width="331dp"
            android:layout_height="58dp"
            android:layout_below="@+id/query"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="34dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="46dp"
            android:hint="    Book Name"
            android:inputType="textPersonName"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/button1"
            android:layout_width="182dp"
            android:layout_height="47dp"
            android:layout_below="@id/Ans1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="113dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="116dp"
            android:background="@drawable/card"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="  REGISTER"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="17sp" />


    </RelativeLayout>

</ScrollView>